@{
    Layout = null;
}

@model User
@using Microsoft.AspNetCore.Mvc.ViewFeatures


<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Purple Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="../../LayoutAdmin/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="../../LayoutAdmin/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="../../LayoutAdmin/assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="../../LayoutAdmin/assets/images/favicon.ico" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-logo">
                                <img src="../../LayoutAdmin/assets/images/logo.svg">
                            </div>
                            <h4>Chào mừng đến với Bookshop</h4>
                            <h6 class="font-weight-light">Đăng ký nào !!!!</h6>
                            @using (Html.BeginForm("Register", "Users", FormMethod.Post))
                            {
                                <div class="form-group">
                                    @Html.TextBoxFor(x=>x.UserName,new{@class="form-control form-control-lg ",placeholder="Tên đăng nhập",required="required",autofocus="autofocus"})
                                    @Html.ValidationMessageFor(x => x.UserName, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control form-control-lg", type = "password", placeholder = "Mật khẩu", required = "required", autofocus = "autofocus" })
                                    @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    
                                    @Html.TextBox("confirmPassword", null, new { @class = "form-control form-control-lg", type = "password", placeholder = "Nhập lại mật khẩu", required = "required" })
                                    @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    @Html.TextBoxFor(x=>x.Email,new{@class="form-control form-control-lg ",placeholder="Email",required="required",autofocus="autofocus"})
                                    @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control form-control-lg", placeholder = "Số điện thoại", required = "required", autofocus = "autofocus", type = "tel", pattern = "[0-9]{10}", onkeypress = "return isNumberKey(event);" })
                                    @Html.ValidationMessageFor(x => x.Phone, "", new { @class = "text-danger" })
                                </div>

                                <script>
                                    function isNumberKey(evt) {
                                        var charCode = (evt.which) ? evt.which : event.keyCode;
                                        if (charCode > 31 && (charCode < 48 || charCode > 57)) {
                                            return false;
                                        }
                                        return true;
                                    }
                                </script>
                                <div class="form-group">
                                    @Html.TextBoxFor(x=>x.Address,new{@class="form-control form-control-lg",placeholder="Địa chỉ",required="required",autofocus="autofocus"})
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(x=>x.FullName,new{@class="form-control form-control-lg",placeholder="Họ và tên",required="required",autofocus="autofocus"})
                                </div>
                                <div class="form-group">
                                    @Html.CheckBoxFor(x => x.IsAdmin, new { @class = "form-check-input" })
                                    <label class="form-check-label" style="font-size: initial"> IsAdmin</label>
                                </div>

                                <div class="form-group">
                                    <label style="font-size:initial">Avatar</label>
                                    <input class="form-control" asp-for="Avatar" type="file" />
                                </div>

                                <div class="mt-3" style="text-align:center;margin-bottom:30px">
                                    <button type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn " >Đăng ký</button>
                                </div>
                                @if (TempData["SuccessMessage"] != null)
                                {
                                    <script>
                                        // Sử dụng JavaScript để hiển thị alert
                                        alert('@TempData["SuccessMessage"]');
                                    </script>
                                }

                                <div class="mb-2">
                                    <button type="button" class="btn btn-block btn-facebook auth-form-btn mt-2 w-100">
                                        <i class="mdi mdi-facebook me-2"></i>Tiếp tục với Facebook
                                    </button>
                                    <button type="button" class="btn btn-block btn-google auth-form-btn mt-2 w-100">
                                        <i class="mdi mdi-google me-2"></i>Tiếp tục với Google
                                    </button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Bạn đã có tài khoản? <a href="register.html" class="text-primary">Đăng nhập</a>
                                </div>

                            }@*</form>*@
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="../../LayoutAdmin/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="../../LayoutAdmin/assets/js/off-canvas.js"></script>
    <script src="../../LayoutAdmin/assets/js/hoverable-collapse.js"></script>
    <script src="../../LayoutAdmin/assets/js/misc.js"></script>
    <!-- endinject -->
</body>
</html>
