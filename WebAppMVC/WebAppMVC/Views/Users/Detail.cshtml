@{
	ViewData["Title"] = "Detail";
	Layout = "~/Views/Shared/LayoutASP.cshtml";
}

@model User

<section class="breadcrumb-section set-bg" data-setbg="Images/Product/Banner/contact.jpg">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 text-center">
				<div class="breadcrumb__text">
					<h2>ĐỔI MẬT KHẨU</h2>
					<div class="breadcrumb__option">
						<a asp-controller="Home" asp-action="Index">Trang Chủ</a>
						<a asp-controller="Users" asp-action="Index">Quay Lại</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

@if (ViewBag.ErrorPass3 != true)
{
	<section class="shoping-cart spad pt-4">
		<div class="container w-50">
			<h4 class="mb-3">Thông tin tài khoản</h4>
			<div class="row">
				<div class="col-lg-9">
					<form asp-action="detail">
						<div class="mb-3">
							<label class="form-label">Mật khẩu cũ:</label>
							<input class="form-control" name="password">
							<p style="color:red;">@ViewBag.ErrorPass</p>
						</div>

						<div class="mb-3">
							<label class="form-label">Mật khẩu mới:</label>
							<input class="form-control" name="passwordNew1">
						</div>
						<div class="mb-3">
							<label class="form-label">Nhập lại mật khẩu mới:</label>
							<input class="form-control" name="passwordNew2">
							<p style="color:red;">@ViewBag.ErrorPass2</p>
						</div>
						<button type="submit" class="btn btn-outline-success float-center w-25">Lưu Thay Đổi</button>
					</form>
				</div>
			</div>
		</div>
	</section>
}
else
{
	<section class="shoping-cart spad pt-4">
		<div class="container w-50 text-center">
			<h4 class="mb-3"></h4>
			<img src="~/Images/Product/Banner/tick-xanh.png" style="width:50px;" class="rounded-circle avatar-lg img-thumbnail" alt="profile-image">
			<p class="mt-3">Bạn đã thay đổi mật khẩu thành công</p>
			<a type="submit" class="btn btn-outline-success" asp-controller="Users" asp-action="Index">Tiếp Tục</a>
		</div>
	</section>
}


