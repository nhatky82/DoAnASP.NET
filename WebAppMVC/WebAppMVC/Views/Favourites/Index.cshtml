@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/LayoutASP.cshtml";
}
@model IEnumerable<Favourite>

<section class="breadcrumb-section set-bg" data-setbg="Images/Product/Banner/contact.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>SÁCH YÊU THÍCH</h2>
                    <div class="breadcrumb__option">
                        <a asp-area="" asp-controller="Home" asp-action="Index">Trang Chủ</a>
                        <span>Yêu Thích</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@if (Model.Count() > 0)
{
    <section class="featured spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h2>Số Sản Phẩm Yêu Thích @Model.Count()</h2>
                    </div>
                </div>
            </div>
            <div class="row featured__filter">
                @foreach (var item in Model)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                        <div class="featured__item">
                            <div class="featured__item__pic set-bg" data-setbg="Images/Product/SachTamly/@item.Product.Image" style="height:350px">
                                <ul class="featured__item__pic__hover">

                                    <li><a asp-controller="Carts" asp-action="Add" asp-route-id="@item.Product.Id"><i class="fa fa-shopping-cart"></i></a></li>
                                    <li><a asp-controller="Favourites" asp-action="Close" asp-route-id="@item.Product.Id"><i class="fa fa-times"></i></a></li>
                                </ul>
                            </div>
                            <div class="featured__item__text">
                                <h6><a href="#">@item.Product.Name</a></h6>
                                <h5>@string.Format("{0:#,##0} đ", item.Product.Price)</h5>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}
else
{

    <section class="shoping-cart spad pt-4">
        <div class="container w-50 text-center">
            <h4 class="mb-3"></h4>
            <img src="~/Images/Product/Banner/shopping_cart.png" style="width:100px;" alt="profile-image">
            <p class="mt-3">Chưa có sản phẩm yêu thích.</p>
            <a type="submit" class="btn btn-success" asp-controller="Home" asp-action="Index">TÌM SÁCH MỚI</a>
        </div>
    </section>
}