@model IEnumerable<ProductType>
<p>
    <a asp-controller="ProductTypes" asp-action="Create" class="btn btn-primary">Thêm loại sách </a>
</p>
<table class="table table-light text-center">
    <thead class="table table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody >
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Sửa</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-danger ">Xem chi tiết</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-info">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
