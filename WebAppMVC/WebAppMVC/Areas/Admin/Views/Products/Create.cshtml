@model Product


<form asp-controller="Products" asp-action="Create" class="col-md-4" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Type"></label>
        <input asp-for="Type" class="form-control"/>
        <span asp-validation-for="Type" class="text-danger">Vui lòng nhập loại sản phẩm</span>
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Type" class="text-danger">Vui lòng nhập tên sản phẩm</span>
    </div>
    <div class="form-group">
        <label asp-for="SKU"></label>
        <input asp-for="SKU" class="form-control" />
        <span asp-validation-for="SKU" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Publisher"></label>
        <input asp-for="Publisher" class="form-control" />
        <span asp-validation-for="Publisher" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger">Vui lòng nhập giá tiền!</span>
    </div>  
    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger">Vui lòng nhập số lượng!</span>
    </div>
    <div class="custom-file">
        <input asp-for="ImageFile" class="custom-file-input" />
        <label asp-for="ImageFile" class="custom-file-label"></label>
        <span asp-validation-for="Quantity" class="text-danger">Vui lòng chọn ảnh!</span>
    </div>
    <div class="form-group">
        <label asp-for="ProductTypeID"></label>
        <select asp-items="@ViewBag.ProductTypes" asp-for="ProductTypeID" class="custom-select"></select>
        <span asp-validation-for="ProductTypeID" class="text-danger"></span>
    </div>
    <div class="custom-control custom-switch">
        <input asp-for="Status" class="custom-control-input" checked>
        <label asp-for="Status" class="custom-control-label">Còn hiệu lực</label>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <button  class="btn btn-success mt-3">Thêm</button>
    <p class="text-danger">@ViewBag.ErrorMessage</p>
    
</form>
