@model User

<form asp-action="Edit" class="col-md-4" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
    </div>
    <div class="form-group">
        <input asp-for="IsAdmin" class="custom-control-input" checked>
        <label asp-for="IsAdmin" class="custom-control-label">isAdmin</label>
    </div>
    <div class="form-group">
        <label asp-for="Avatar"></label>
        <input asp-for="Avatar" class="form-control" />
    </div>
    <div class="custom-control custom-switch">
        <input asp-for="Status" class="custom-control-input" checked>
        <label asp-for="Status" class="custom-control-label">Còn hiệu lực</label>
    </div>
    <button class="btn btn-success mt-3">Sửa</button>
    <p class="text-danger">@ViewBag.ErrorMessage</p>

</form>